<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>AVFA | {{error.status}} {{message}}</title>
        
        <link rel="icon" type="image/png" href="/icons/avfa-logo.png" />

        <!-- Google Font: Source Sans Pro -->
        <link rel="stylesheet" type="text/css" href="/fonts/googleapis.css">
        <!-- Font Awesome -->
        <link rel="stylesheet" type="text/css" href="/css/all.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" type="text/css" href="/css/adminlte.min.css">

    </head>
    <body class="hold-transition sidebar-mini">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>{{error.status}} {{message}}</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active">{{error.status}} {{message}}</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="error-page">
                {% if  error.status >= 400 %}
                    <h2 class="headline text-warning">{{error.status}}</h2>
                {% elseif error.status >= 500 %}
                    <h2 class="headline text-danger">{{error.status}}</h2>
                {% endif %}
                <div class="error-content">
                    <h3><i class="fas fa-exclamation-triangle text-warning"></i> Oops! {{message}}.</h3>
                    <pre>{{error.stack}}</pre>
                </div>
            </div>
        </section>
        <aside class="control-sidebar control-sidebar-dark"></aside>

        <!-- jQuery -->
        <script src="/js/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="/js/adminlte.min.js"></script>
        <script>
            var dark = localStorage.getItem('dark');
        </script>
        
    </body>
</html>